<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".CalculatorApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_foreground_logo_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_foreground_logo_app"
        android:supportsRtl="true"
        android:requestLegacyExternalStorage="true"
        android:theme="@style/Theme.HideCalculator"
        tools:targetApi="31">
        <activity
            android:name=".feature.splash.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".feature.calculator.CalculatorActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".feature.user.password.SetPasswordActivity"
            android:windowSoftInputMode="stateAlwaysHidden|adjustNothing"/>
        <activity android:name=".feature.main.MainActivity"/>
        <activity android:name=".feature.main.note.NoteActivity"/>
        <activity android:name=".feature.main.note.DetailNoteActivity"/>
        <activity android:name=".feature.user.setting.SettingActivity"/>
        <activity android:name=".feature.main.images.AlbumsActivity"/>
        <activity android:name=".feature.main.images.ImagesActivity"/>
        <activity android:name=".feature.main.saved.SavedActivity"/>
        <activity android:name=".feature.main.images.ShowAllHiddenImageActivity"/>
        <activity android:name=".feature.main.video.VideoActivity"/>
        <activity android:name=".feature.main.saved.SavedVideoActivity"/>
        <activity android:name=".feature.main.video.PlayVideoActivity"/>
        <activity android:name=".feature.main.saved.HiddenFileActivity"/>
    </application>

</manifest>