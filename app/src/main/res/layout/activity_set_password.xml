<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/san_regular"
        android:text="@string/set_password"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/_20ssp"
        android:layout_marginTop="@dimen/_8sdp"/>

    <TextView
        android:id="@+id/tv_password_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/password_guide"
        android:layout_marginTop="@dimen/_5sdp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.26"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_password_guide"
        app:layout_constraintBottom_toBottomOf="@id/gl1"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/edt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="1"
            android:inputType="number"
            android:layout_marginHorizontal="@dimen/_8sdp"/>

        <EditText
            android:id="@+id/edt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="1"
            android:inputType="number"
            android:layout_toEndOf="@id/edt1"
            android:layout_marginHorizontal="@dimen/_8sdp"/>

        <EditText
            android:id="@+id/edt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="1"
            android:inputType="number"
            android:layout_toEndOf="@id/edt2"
            android:layout_marginHorizontal="@dimen/_8sdp"/>

        <EditText
            android:id="@+id/edt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="1"
            android:inputType="number"
            android:layout_toEndOf="@id/edt3"
            android:layout_marginHorizontal="@dimen/_8sdp"/>

        <EditText
            android:id="@+id/edt5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="1"
            android:inputType="number"
            android:layout_toEndOf="@id/edt4"
            android:layout_marginHorizontal="@dimen/_8sdp"/>

        <EditText
            android:id="@+id/edt6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="1"
            android:inputType="number"
            android:layout_toEndOf="@id/edt5"
            android:layout_marginHorizontal="@dimen/_8sdp"/>

    </RelativeLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/gl1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginVertical="@dimen/_48sdp"
        android:layout_marginHorizontal="@dimen/_16sdp">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4">

        <Button
            android:id="@+id/seven"
            style="@style/CalculatorButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/grey"
            android:text="7"
            android:textSize="28sp" />

        <Button
            style="@style/CalculatorButton"
            android:id="@+id/eight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/grey"
            android:text="8"
            android:textSize="28sp"/>

        <Button
            style="@style/CalculatorButton"
            android:id="@+id/nine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/grey"
            android:text="9"
            android:textSize="28sp"/>


    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4">

        <Button
            style="@style/CalculatorButton"
            android:id="@+id/four"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/grey"
            android:text="4"
            android:textSize="28sp"/>

        <Button
            style="@style/CalculatorButton"
            android:id="@+id/five"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/grey"
            android:text="5"
            android:textSize="28sp"/>

        <Button
            style="@style/CalculatorButton"
            android:id="@+id/six"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/grey"
            android:text="6"
            android:textSize="28sp"/>


    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4">

        <Button
            style="@style/CalculatorButton"
            android:id="@+id/one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/grey"
            android:text="1"
            android:textSize="28sp"/>

        <Button
            style="@style/CalculatorButton"
            android:id="@+id/two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/grey"
            android:text="2"
            android:textSize="28sp"/>

        <Button
            style="@style/CalculatorButton"
            android:id="@+id/three"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/grey"
            android:text="3"
            android:textSize="28sp"/>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4">

        <ImageButton
            style="@style/CalculatorButton"
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/grey"
            android:text=""
            android:src="@drawable/baseline_backspace_24"
            app:tint="@color/white" />

        <Button
            style="@style/CalculatorButton"
            android:id="@+id/zero"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/grey"
            android:text="0"
            android:textSize="28sp"/>

        <Button
            style="@style/CalculatorButton"
            android:id="@+id/equal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/red_equal_button"
            android:text="="
            android:textSize="28sp"/>

    </TableRow>

</TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>